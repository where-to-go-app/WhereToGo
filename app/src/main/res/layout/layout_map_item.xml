<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mapItemPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:src="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/mapItemBack"
        app:layout_constraintStart_toEndOf="@+id/mapItemBack"
        app:layout_constraintTop_toTopOf="@+id/mapItemBack" />

    <TextView
            android:id="@+id/mapItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Название"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/mapItemPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mapItemPhoto" android:layout_marginBottom="12dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/mapItemDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Описание"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/mapItemPhoto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/mapItemAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Адрес"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/mapItemDesc"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"/>


    <TextView
            android:id="@+id/mapItemCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Страна"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/mapItemAddress"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/mapItemBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />


</androidx.constraintlayout.widget.ConstraintLayout>