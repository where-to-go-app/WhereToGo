<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mapItemPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mapItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/mapItemPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapItemPhoto" />
    <TextView
            android:id="@+id/mapItemDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Очень интересное место"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/mapItemPhoto"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/mapItemAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Улица пушкина дом колотушкина"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/mapItemDesc"
            app:layout_constraintStart_toStartOf="parent" />


    <TextView
            android:id="@+id/mapItemCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Россия"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/mapItemAddress"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mapItemProvince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Москва"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/mapItemCountry"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>