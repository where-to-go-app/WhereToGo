<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panelRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_shape"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/bottom_sheet_min_height"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_min_height"
        android:orientation="vertical"
        android:clickable="true"
        android:weightSum="100">

        <ImageView
            android:id="@+id/panelArrowUp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            app:srcCompat="@drawable/ic_arrow_up" />

        <TextView
            android:id="@+id/panelTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:elevation="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/panelList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:id="@+id/panelShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_shadow_height"
            android:background="@drawable/bar_shadow" />
    </FrameLayout>

</LinearLayout>